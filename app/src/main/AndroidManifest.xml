<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ge.nsakandelidze.customMessenger">

    <application
        android:name=".Initializer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomMessenger">
        <activity android:name=".view.searchPage.UsersSearchActivity"/>
        <activity android:name=".view.signUp.SignUpActivity"/>
        <activity android:name=".view.viewpager.MainPageContainerActivity"/>
        <activity android:name=".view.signIn.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>